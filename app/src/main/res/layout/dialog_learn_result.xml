<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="785dp"
            android:layout_height="469dp" app:srcCompat="@drawable/lrn_dialog_img"
            android:id="@+id/imageView18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/speedDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/noto_sans"
            android:lineSpacingExtra="4sp"
            android:text="少し反応が遅いようです。\n音が鳴ってから回数を数えるタイミングを\n少し早くするように意識しましょう"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            app:layout_constraintStart_toStartOf="@+id/guideline12"
            app:layout_constraintTop_toTopOf="@+id/guideline18" />
    <TextView
            android:text="脳波の学習が完了しました"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:fontFamily="@font/noto_sans_bold"
            android:textSize="23dp" android:textAlignment="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintEnd_toEndOf="@+id/imageView18" android:textColor="@color/peachy_pink"/>

    <TextView
            android:id="@+id/accLbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/roboto_medium"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="#969696"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline17"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            tools:text="86.0%" />

    <TextView
            android:id="@+id/accLbl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/roboto_medium"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="#969696"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline19"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            tools:text="86.0%" />

    <TextView
            android:id="@+id/accLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/roboto_medium"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="#969696"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline16"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            tools:text="86.0%" />

    <TextView
            android:id="@+id/accLbl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/roboto_medium"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="#969696"
            android:textSize="19sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline18"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            tools:text="86.0%" />
    <Button
            android:layout_width="304dp"
            android:layout_height="64dp"
            android:id="@+id/doneBtn"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="@+id/textView9" android:background="@drawable/lrn_end_btn_set"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="@+id/imageView18"/>

    <TextView
            android:id="@+id/accDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/noto_sans"
            android:text="このデータセットでは3分類が使用されます"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline16" />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3" app:layout_constraintGuide_begin="37dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="left"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline12" app:layout_constraintGuide_begin="392dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline13" app:layout_constraintGuide_begin="748dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline14" app:layout_constraintGuide_begin="570dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/graph_right" app:layout_constraintGuide_begin="695dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline16" app:layout_constraintGuide_begin="311dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline17" app:layout_constraintGuide_begin="175dp"
                                          android:orientation="horizontal"/>

    <ImageView
            android:id="@+id/speedIndicator"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline17"
            app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="@+id/guideline14"
            app:srcCompat="@drawable/lrn_graph_indicator" />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline18" app:layout_constraintGuide_begin="221dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline19" app:layout_constraintGuide_begin="267dp"
                                          android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>