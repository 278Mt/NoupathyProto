<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DatasetActivity" android:background="@color/colorPrimaryDark">

    <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="585dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:color="@android:color/white"
            android:layout_marginEnd="280dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="残り回数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" android:textColor="#FFFFFF"
            android:singleLine="false" app:layout_constraintStart_toEndOf="@+id/divider"
            android:layout_marginStart="40dp" app:layout_constraintTop_toTopOf="parent"

            android:layout_marginTop="50dp" android:textSize="20sp"/>
    <TextView
            android:text="10回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_trial_text" android:textColor="#FFFFFF"
            android:singleLine="false" app:layout_constraintStart_toEndOf="@+id/divider"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView19"/>

    <TextView
            android:text="現在のポイント"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21" android:textColor="#FFFFFF"
            android:singleLine="false" app:layout_constraintStart_toEndOf="@+id/divider"
            android:layout_marginStart="40dp"

            android:textSize="20sp" app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginTop="100dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_point_text" android:textColor="#FFFFFF"
            android:singleLine="false" app:layout_constraintStart_toEndOf="@+id/divider"
            android:layout_marginStart="40dp"

            android:layout_marginTop="100dp" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/left_trial_text"/>

    <TextView
            android:text="クリアのポイント"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23" android:textColor="#FFFFFF"
            android:singleLine="false" app:layout_constraintStart_toEndOf="@+id/divider"
            android:layout_marginStart="40dp"

            android:layout_marginTop="100dp" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView21"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear_point_text" android:textColor="#FFFFFF"
            android:singleLine="false" app:layout_constraintStart_toEndOf="@+id/divider"
            android:layout_marginStart="40dp"

            android:layout_marginTop="100dp" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/current_point_text"/>

    <TextView
            android:text="5"
            android:layout_width="579dp"
            android:layout_height="99dp"
            android:id="@+id/count_text" android:textSize="30sp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView16" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/divider" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/plyr_s1_img"
            android:id="@+id/game_image1"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/plyr_s5_img"
            android:id="@+id/game_image5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/divider"
            android:layout_marginEnd="150dp"/>
    <ImageView
            android:layout_width="883dp"
            android:layout_height="91dp" app:srcCompat="@drawable/com_footer_img"
            android:id="@+id/imageView16"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="264dp"
            android:layout_height="77dp"
            android:id="@+id/start" android:textSize="28dp"
            android:fontFamily="@font/roboto_bold"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="@+id/imageView16" android:text="ゲームスタート"
            android:textColor="#FFFFFF" android:textColorHighlight="#00613B3B" android:textColorLink="#000000"/>
    <TextView
            android:text="60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calibration" android:fontFamily="@font/roboto_bold"
            android:textSize="32dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline6" android:layout_marginEnd="88dp"
            app:layout_constraintEnd_toStartOf="@+id/start"/>
    <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp" app:srcCompat="@drawable/com_ng_icon"
            android:id="@+id/fitting" app:layout_constraintEnd_toStartOf="@+id/calibration"
            android:layout_marginEnd="112dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView16"/>
    <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp" app:srcCompat="@drawable/com_ng_icon"
            android:id="@+id/connect"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/fitting"
            android:layout_marginEnd="112dp" app:layout_constraintStart_toStartOf="@+id/guideline11"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="---"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/battery" android:fontFamily="@font/roboto_bold"
            android:textSize="30dp" android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline11"
            android:layout_marginStart="56dp" app:layout_constraintStart_toStartOf="@+id/imageView16"/>
    <TextView
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_result" android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/right_point"
            app:layout_constraintStart_toStartOf="@+id/right_point"
            app:layout_constraintEnd_toEndOf="@+id/right_point" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/count_text"/>
    <TextView
            android:text="100%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_result" android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/left_point"
            app:layout_constraintEnd_toEndOf="@+id/left_point" app:layout_constraintStart_toStartOf="@+id/left_point"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/count_text"/>
    <TextView
            android:text="XXポイント"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_point"
            android:textSize="30sp" android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/game_image1"
            app:layout_constraintEnd_toEndOf="@+id/game_image1"
            app:layout_constraintStart_toStartOf="@+id/game_image1"/>
    <TextView
            android:text="XXポイント"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_point"
            android:textSize="30sp" android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/game_image5"
            app:layout_constraintEnd_toEndOf="@+id/game_image5"
            app:layout_constraintStart_toStartOf="@+id/game_image5"/>
</android.support.constraint.ConstraintLayout>