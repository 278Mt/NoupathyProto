<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="785dp"
            android:layout_height="469dp" app:srcCompat="@drawable/com_dialog_img"
            android:id="@+id/imageView26"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="通信中です"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" android:fontFamily="@font/noto_sans"
            android:textSize="23dp" android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView26" android:textColor="@color/peachy_pink"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/textView13"
    />
    <TextView
            android:text="結果を取得しています。しばらくお待ちください。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:fontFamily="@font/noto_sans"
            android:textSize="20dp" android:textAlignment="center" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView13" app:layout_constraintEnd_toEndOf="@+id/textView13"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
</android.support.constraint.ConstraintLayout>