            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView6" android:layout_marginEnd="8dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="@+id/imageView6"/>
    <ImageView
            android:layout_width="115dp"
            android:layout_height="193dp" app:srcCompat="@drawable/rec_s4_frame"
            android:id="@+id/imageView7"
