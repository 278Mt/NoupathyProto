            android:layout_width="427dp"
            android:layout_height="87dp" app:srcCompat="@drawable/rec_done_img"
            android:id="@+id/doneImg" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
