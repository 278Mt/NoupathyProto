            android:layout_marginEnd="38dp" android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="185dp"
            android:layout_height="109dp" app:srcCompat="@drawable/rec_target_img"
            android:id="@+id/targetImg" android:layout_marginTop="10dp"
