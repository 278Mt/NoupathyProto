            android:text="100.00%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accLbl"
            android:layout_marginEnd="160dp" app:layout_constraintEnd_toEndOf="@+id/doneImg" android:textSize="20sp"
            android:fontFamily="@font/roboto_bold" android:textColor="@color/peachy_pink"
            android:layout_marginTop="9dp" app:layout_constraintTop_toTopOf="@+id/doneImg"/>

    <com.polyak.iconswitch.IconSwitch
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:isw_active_tint_icon_left="#000"
            app:isw_active_tint_icon_right="#000"
            app:isw_background_color="#bab2b2"
            app:isw_icon_left="@drawable/volume_down"
            app:isw_icon_right="@drawable/volume_up"
            app:isw_inactive_tint_icon_left="#777"
            app:isw_inactive_tint_icon_right="#777"
            app:isw_thumb_color_left="#fff"
            app:isw_thumb_color_right="#fff"
            app:layout_constraintBottom_toBottomOf="@+id/soundBtn"
            app:layout_constraintEnd_toStartOf="@+id/selectBtn"
