<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/peachy_pink">
    <Button
            android:layout_width="177dp"
            android:layout_height="224dp"
            android:id="@+id/recordButton"
            android:fontFamily="@font/roboto_bold"
            android:textSize="32dp"
            android:background="@drawable/top_record_btn_set" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="123dp"/>
    <Button
            android:layout_width="177dp"
            android:layout_height="224dp"
            android:id="@+id/playButton"
            app:layout_constraintTop_toTopOf="@+id/recordButton"
            app:layout_constraintBottom_toBottomOf="@+id/recordButton"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/roboto_bold" android:textSize="32dp"
            android:background="@drawable/top_play_btn_set"
            android:layout_marginEnd="123dp"/>
    <ImageView
            android:layout_width="368dp"
            android:layout_height="58dp" app:srcCompat="@drawable/top_title_img"
            android:id="@+id/imageView" android:layout_marginTop="95dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="173dp"
            android:layout_height="224dp"
            android:id="@+id/gameButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/recordButton"
            app:layout_constraintBottom_toBottomOf="@+id/recordButton" android:background="@drawable/top_game_btn_set"/>
    <TextView
            android:text="User id: 000003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idText"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp" android:layout_marginBottom="10dp" android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_medium" android:textAlignment="textEnd"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idSetBtn"
            android:layout_marginBottom="6dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/howtoBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/com_howto_btn_set"/>
</android.support.constraint.ConstraintLayout>