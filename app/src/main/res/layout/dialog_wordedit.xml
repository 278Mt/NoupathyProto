<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="785dp"
            android:layout_height="469dp" app:srcCompat="@drawable/com_dialog_img"
            android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusableInTouchMode="true"/>
    <TextView
            android:text="言葉を編集する"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTitle" android:fontFamily="@font/roboto_bold"
            android:textSize="23sp" android:textColor="@color/peachy_pink" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/imageView9" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_width="229dp"
            android:layout_height="54dp"
            android:id="@+id/wordSetBtn"
            android:background="@drawable/wrd_ok_btn_set" android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/wordTxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="1が選択された時の言葉を編集します"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wordDesc" android:textSize="21sp"
            android:fontFamily="@font/noto_sans" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/playerTitle" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="504dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/wordTxt" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/wordDesc" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="21sp" android:fontFamily="@font/noto_sans"/>
</android.support.constraint.ConstraintLayout>