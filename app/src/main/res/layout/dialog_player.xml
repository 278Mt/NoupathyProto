<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="785dp"
            android:layout_height="469dp" app:srcCompat="@drawable/com_dialog_img"
            android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="129dp"
            android:layout_height="78dp"
            android:id="@+id/image"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/plyr3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/plyr_now_img"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/stop"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="45dp"
            app:layout_constraintTop_toTopOf="@+id/playerTitle" app:layout_constraintBottom_toBottomOf="@+id/playerTitle"
            android:background="@drawable/plyr_stop_btn_set"/>
    <TextView
            android:text="脳波を記録しています"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTitle" android:fontFamily="@font/roboto_bold"
            android:textSize="23sp" android:textColor="@color/peachy_pink" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/imageView9" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="131dp"
            android:layout_height="131dp" app:srcCompat="@drawable/plyr_s1_img"
            android:id="@+id/plyr1"
            app:layout_constraintEnd_toStartOf="@+id/plyr2" android:layout_marginEnd="13dp"
            app:layout_constraintTop_toTopOf="@+id/plyr3"
            app:layout_constraintBottom_toBottomOf="@+id/plyr3"/>
    <ImageView
            android:layout_width="131dp"
            android:layout_height="131dp" app:srcCompat="@drawable/plyr_s2_img"
            android:id="@+id/plyr2"
            app:layout_constraintEnd_toStartOf="@+id/plyr3" android:layout_marginEnd="13dp"
            app:layout_constraintTop_toTopOf="@+id/plyr3"
            app:layout_constraintBottom_toBottomOf="@+id/plyr3"/>
    <ImageView
            android:layout_width="131dp"
            android:layout_height="131dp" app:srcCompat="@drawable/plyr_s3_img"
            android:id="@+id/plyr3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/playerTitle"/>
    <ImageView
            android:layout_width="131dp"
            android:layout_height="131dp" app:srcCompat="@drawable/plyr_s4_img"
            android:id="@+id/plyr4"
            app:layout_constraintStart_toEndOf="@+id/plyr3" android:layout_marginStart="13dp"
            app:layout_constraintTop_toTopOf="@+id/plyr3"
            app:layout_constraintBottom_toBottomOf="@+id/plyr3"/>
    <ImageView
            android:layout_width="131dp"
            android:layout_height="131dp" app:srcCompat="@drawable/plyr_s5_img"
            android:id="@+id/plyr5"
            app:layout_constraintStart_toEndOf="@+id/plyr4" android:layout_marginStart="13dp"
            app:layout_constraintTop_toTopOf="@+id/plyr3"
            app:layout_constraintBottom_toBottomOf="@+id/plyr3"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/progress"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toBottomOf="@+id/imageView9"/>
</android.support.constraint.ConstraintLayout>