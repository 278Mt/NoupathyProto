<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DatasetActivity" android:background="@color/peachy_pink">

    <TextView
            android:text="フォルダを変更する"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:textSize="26dp"
            android:fontFamily="@font/noto_sans_bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textAlignment="center" android:textColor="@android:color/white"/>
    <Button
            android:text="追加"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/add"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16dp" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="@+id/textView12"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"/>
    <ListView
            android:layout_width="960dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:id="@+id/datasets"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:divider="@android:color/white" android:dividerHeight="1dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>